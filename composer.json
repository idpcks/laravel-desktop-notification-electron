{
    "name": "laravel-desktop-notification-electron/desktop-notifications",
    "description": "A Laravel package for displaying desktop notifications using Electron",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "electron",
        "notifications",
        "desktop",
        "package"
    ],
    "authors": [
        {
            "name": "idpcks",
            "email": "mail.idpcks@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelDesktopNotifications\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelDesktopNotifications\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelDesktopNotifications\\DesktopNotificationServiceProvider"
            ],
            "aliases": {
                "DesktopNotification": "LaravelDesktopNotifications\\Facades\\DesktopNotification"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "post-install-cmd": [
            "@php -r \"if (file_exists('artisan')) { echo 'Laravel project detected. Run: php artisan desktop-notifications:install'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('artisan')) { echo 'Laravel project detected. Run: php artisan desktop-notifications:install'; }\""
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/idpcks/laravel-desktop-notification-electron"
        }
    ]
} 