{
  "name": "laravel-desktop-notification-electron",
  "version": "1.0.0",
  "description": "Desktop notification library for Laravel using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "laravel",
    "electron",
    "notifications",
    "desktop"
  ],
  "author": "idpcks",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "node-notifier": "^10.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "build": {
    "appId": "com.laravel.desktop-notifications",
    "productName": "Laravel Desktop Notifications",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 